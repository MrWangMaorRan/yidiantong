<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.warehouse.HouseActivity"
    android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/house_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:titleTextColor="#3c3c3c"
        app:title="文件助手"
        app:navigationIcon="@drawable/ic_back_gray">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:background="#e4e7ee"
        android:layout_width="match_parent"
        android:layout_height="2dp"></TextView>
    <com.google.android.material.tabs.TabLayout
        android:visibility="gone"
        android:id="@+id/house_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#3f74fd"
        app:tabSelectedTextColor="#3c3c3c"
        >

    </com.google.android.material.tabs.TabLayout>
