<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/virtual_number_display"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_virtual_number_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/gray_a1a3aa"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/number_attribution_place"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_number_attribution_place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/gray_a1a3aa"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View
                style="@style/lineStyleHorizontal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:id="@+id/ll_gender"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/gender_2"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:id="@+id/ll_industry"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/industry_2"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_industry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_enter_gray" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:id="@+id/ll_birthday"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/birthday"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_enter_gray" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/we_chat_num_2"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_we_chat_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/phone_num_2"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/describe_2"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <EditText
                    android:id="@+id/et_describe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_input_describe"
                    android:text=""
                    android:textColor="@color/black_3c3c3c"
                    android:textColorHint="@color/gray_a1a3aa"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="90dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:text="@string/customer_label"
                    android:textColor="@color/black_3c3c3c"
                    android:textSize="@dimen/textSize16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.yidiantong.widget.FlowLayout
                        android:id="@+id/fl_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/lineStyleHorizontal" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_corner_38dp_blue"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>